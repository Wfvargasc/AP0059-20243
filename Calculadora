#clase
class Square:
   def __init__(self,val):
      self.val=val
   def getVal(self):
      return self.val*self.val
 
class Calculadora:
   def add(self, a, b):
      return a + b
   def sub(self, a, b):
      return a - b
   def mul (self, a, b):
      return a * b
   def div (self, a, b):
      if b != 0:
         return a / b
      else:
         return "Error: La division es 0"
#main
from clase import Square, Calculadora 

object1 = Square(5)
print(f"From class Square: {object1.getVal()}")

object2 = Calculadora()

print(f"From class Calculator: Addition {object2.add(6,3)}")
print(f"From class Calculator: Subtraction {object2.sub(2,3)}")
print(f"From class Calculator: Multiplication {object2.mul(2, 3)}") 
print(f"From class Calculator: Division {object2.div(10, 3)}")
